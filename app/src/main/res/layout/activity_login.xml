<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/LoginAppLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_applogo"
        />

    <EditText
        android:id="@+id/LoginEmailorPhoneInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_box"
        android:padding="14dp"
        android:textSize="16dp"
        android:fontFamily="@font/hind_vadodara_semibold"
        android:textColor="@color/black"

        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/grey"
        />

    <EditText
        android:id="@+id/LoginPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LoginEmailorPhoneInput"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_box"
        android:padding="14dp"
        android:textSize="16dp"
        android:fontFamily="@font/hind_vadodara_semibold"
        android:textColor="@color/black"

        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/grey"
        />

    <Button
        android:id="@+id/LoginLoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/LoginPasswordInput"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="14dp"
        android:textSize="16dp"
        android:textAlignment="center"
        android:fontFamily="@font/hind_vadodara_bold"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:text="Log In"
        android:gravity="center_horizontal"
        />


    <LinearLayout
        android:id="@+id/LoginLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/LoginLoginButton"
        android:layout_marginTop="7dp"
        >

        <TextView
            android:id="@+id/ForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:fontFamily="@font/hind_vadodara_medium"
            android:layout_marginLeft="20dp"
            android:text="Forgot password?"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LoginLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:layout_below="@+id/LoginLinearLayout"
        android:layout_marginTop="200dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/NoAccountQuestion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:paddingTop="11dp"
            android:gravity="end"
            android:textAlignment="viewEnd"
            android:fontFamily="@font/hind_vadodara_medium"
            android:text="Don't have an account?"
            />

        <Button
            android:id="@+id/LoginSignup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/NoAccountQuestion"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_button"
            android:textSize="14dp"
            android:fontFamily="@font/hind_vadodara_bold"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:text="Sign up."

            />

    </LinearLayout>

    <TextView
        android:id="@+id/LoginAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:fontFamily="@font/hind_vadodara_medium"
        android:text="I'm an Admin?"
        />

    <ProgressBar
        android:id="@+id/LoginProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="300dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        />


</RelativeLayout>